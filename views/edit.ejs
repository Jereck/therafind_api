<% include partials/header %>
    <div class="container my-5">
        <h1 class="display-1">Thera<span class="text-warning">Find</span></h1>
        <h5 class="mb-5">Fill out the information below to be added to the database</h5>
        
        <form method="POST" action="/therapy/<%= therapy._id %>?_method=PUT">
            <div class="form-group">
                <label>Company Name:</label>
                <input type="text"  name="name" class="form-control" value="<%= therapy.name %>" />
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" name="address" class="form-control" value="<%= therapy.address %>"/>
            </div>
            <div class="form-group">
                <label>Address 2:</label>
                <input type="text" name="address_two" class="form-control" value="<%= therapy.address_two %>" />
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>City:</label>
                    <input type="text" name="city" class="form-control" value="<%= therapy.city %>" />
                </div>
                <div class="form-group col-md-4">
                    <label>State:</label>
                    <input type="text" name="state" class="form-control" value="<%= therapy.state %>" />
                </div>
                <div class="form-group col-md-2">
                    <label>Zip Code:</label>
                    <input type="text" name="zip" class="form-control" value="<%= therapy.zip %>" />
                </div>
            </div>
            <div class="form-group">
                <label>Phone Number:</label>
                <input type="text" name="phonenumber" class="form-control" value="<%= therapy.phone %>" /> 
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" class="form-control" value="<%= therapy.email %>" /> 
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        
    </div>
<% include partials/footer %>