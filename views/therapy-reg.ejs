<% include partials/header %>
    <div class="container my-5">
        <p>Step 2:</p>
        <h1 class="display-1">Thera<span class="text-warning">Find</span></h1>
        <h5 class="mb-5">Fill out the information below to be added to the database</h5>
        
        <form method="POST" action="/submit">
            <div class="row frow">
                <div class="col-md-3">
                    <p class="h4">Company Info</p>
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        <label>Company Name:</label>
                        <input type="text" placeholder="The ABA Company" name="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Address:</label>
                        <input type="text" placeholder="123 Fake Street" name="address" class="form-control" />
                    </div>
                    <!-- <div class="form-group">
                        <label>Address 2:</label>
                        <input type="text" placeholder="Suite B104" name="address_two" class="form-control" />
                    </div> -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>City:</label>
                            <input type="text" placeholder="Las Vegas" name="city" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>State:</label>
                            <input type="text" placeholder="Nevada" name="state" class="form-control" />
                        </div>
                        <div class="form-group col-md-2">
                            <label>Zip Code:</label>
                            <input type="text" placeholder="88901" name="zip" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row frow">
                <div class="col-md-3">
                    <p class="h4">Contact Info</p>
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        <label>Phone Number:</label>
                        <input type="text" placeholder="(123)123-1234" name="phonenumber" class="form-control"> 
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" placeholder="company@gmail.com" name="email" class="form-control"> 
                    </div>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        
    </div>
<% include partials/footer %>